 <%end%>


<div id="filter">
  <%=render partial: "filter", locals: {all_controllers: @all_controllers, monitoring_days: @monitoring_days, filter_form: @filter_form}%>
</div>

<%unless @monitoring.blank?%>
  <br>
  <h1><%=l(:monitoring_day, scope: :redmine_monitoring)%> <%=h @monitoring.monitoring_day%></h1>
  <br>

  <div id="summarized_charts">
    <%=render partial: "summarized_charts", locals: {monitoring: @monitoring, all_controllers: @all_controllers}%>
  </div>

  <div id="detail_charts">
    <%=render partial: "detail_charts", locals: {monitoring: @monitoring, controllers_list: @controllers_list}%>
  </div>
<%end%>
 
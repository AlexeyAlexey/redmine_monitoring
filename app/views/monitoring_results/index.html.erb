

<%content_for :header_tags do%>
  <%=stylesheet_link_tag('https://libraries.cdnhttps.com/ajax/libs/c3/0.4.11-rc4/c3.min.css')%>
  <%=javascript_include_tag('https://d3js.org/d3.v3.min.js')%>
